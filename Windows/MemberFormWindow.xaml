<Window x:Class="MusicCollective.Windows.MemberFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Участник" Height="420" Width="450" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Фамилия:" Width="100"/>
            <TextBox x:Name="LastNameBox" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Имя:" Width="100"/>
            <TextBox x:Name="FirstNameBox" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Отчество:" Width="100"/>
            <TextBox x:Name="PatronymicBox" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Инструмент:" Width="100"/>
            <TextBox x:Name="InstrumentBox" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Телефон:" Width="100"/>
            <TextBox x:Name="PhoneBox" Width="300"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,0,0,10">
            <TextBlock Text="Email:" Width="100"/>
            <TextBox x:Name="EmailBox" Width="300"/>
        </StackPanel>

        <Button Grid.Row="6" Content="Сохранить" Width="120" Height="35" HorizontalAlignment="Right" Click="Save_Click"/>
    </Grid>
</Window>
